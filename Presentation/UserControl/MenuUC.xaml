<controls:AppUserControl x:Class="WPF_APOSTAR_MIGRACION.Presentation.UserControls.MenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_APOSTAR_MIGRACION.Presentation.UserControls"
             xmlns:controls="clr-namespace:WPF_APOSTAR_MIGRACION.Presentation.Controls"
             mc:Ignorable="d"
             d:DesignHeight="1920" d:DesignWidth="1080">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">

          
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Images/Backgrounds/BgApostar.png"/>
            </Grid.Background>

            <TextBlock 
         x:Name="tbTimer"
         FontSize="45"
         Foreground="White"
         FontWeight="Bold"
         HorizontalAlignment="Right"
         VerticalAlignment="Top"
         Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

         <Image x:Name="BetPlay"
         Source="/Assets/Images/Buttons/BtnBetPlay.png" 
         Margin="548,485,62,927"
         TouchDown="Btn_JugarTouchDown"
         
         />

         <Image x:Name="Chance"
         Source="/Assets/Images/Buttons/BtnChance.png" 
         Margin="51,1100,590,312"
         Visibility="Visible"
         TouchDown="Btn_ChanceTouchDown"
        
         />

            <Image
         Source="/Assets/Images/Buttons/BtnRecaudo.png" 
         Visibility="Hidden"
         TouchDown="Btn_RecaudoTouchDown"
         Margin="67,960,499,512"
         />

            <Image x:Name="Paquetes" Source="/Assets/images/Buttons/BotonPaquetes.png" 
             Margin="71,485,0,0"
             HorizontalAlignment="Left"
             TouchDown="Btn_RechargeTouchDown"
             VerticalAlignment="Top" Height="508" Width="431">
            </Image>

            <Image
         Source="/Assets/Images/Others/ApostarA.png" Margin="311,24,311,1678"
         />

            <Image
         Source="/Assets/Images/Others/TxtDiviertete.png" Margin="156,195,156,1466"
         >
                <UIElement.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </UIElement.RenderTransform>
            </Image>




        </Grid>
    </Viewbox>
</controls:AppUserControl> 